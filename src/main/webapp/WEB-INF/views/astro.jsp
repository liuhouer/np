	<script type="text/javascript">
	//禁止图片拉伸
	$(function(){
		$("img").each(function(){
			$(this).css('max-width',($("#J_white_div").width()));
		})
		//样式固定
		$(".astroa").css("font-size","10px");
		$("#J_ul_astro>li").css("margin-left","0px");
		$("#J_ul_astro").css("float","none");
		
		//星座的选择点击事件
		$("#J_ul_astro>li").click(function(){
			$(this).css("background","#45d0c6").siblings().css("background","");
			var xzname = $(this).find("span").text();
			if(xzname){
				//设值
				$("#J_xzname").val(xzname);
			}

			//加载数据----
			getData();
		})
		
		//今日、明日、本周的点击事件
		$("#J_tag_div>a").click(function(){
			$(this).addClass("btn-hero").siblings().removeClass("btn-hero");
			var oid = $(this).attr("oid");
			if(oid){
				//设值
				$("#J_type").val(oid);
			}

			//加载数据----
			getData();
		})
		
		
		
		//初始化
		var xzname = $("#J_xzname").val();
		var type = $("#J_type").val();
		
		//选中星座
		if(xzname){
			$("#J_ul_astro").find("li").each(function(){
				var oname = $(this).attr("oname");
				if( oname == xzname){
					$(this).css("background","#45d0c6").siblings().css("background","");
				}
			})
		}
		
		//选中今日、明日、等类型
		if(type){
			$("#J_tag_div>a").each(function(){
				var oid = $(this).attr("oid");
				if(oid == type){
					$(this).addClass("btn-hero").siblings().removeClass("btn-hero");
				}
			});
		}
		
		//加载数据----
		getData();
		
		
